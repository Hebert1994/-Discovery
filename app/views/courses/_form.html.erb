
  <%= form_with(model: course, local: true) do |form| %>
    <% if course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
        <ul>
          <% course.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :thumbnail, "Thumbnail" %>
      <%= form.file_field :thumbnail, required: true, class: "form-control"  %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :video, "Video" %>
      <%= form.file_field :video, required: true, class: "form-control"  %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :title, "Titulo" %>
      <%= form.text_field :title, required: true, class: "form-control"  %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :description, "Descrição" %>
      <%= form.text_area :description, required: true, class: "form-control"  %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :module, "Modulo" %>
      <%= form.text_field :module, required: true, class: "form-control"  %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit 'Salvar', class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>