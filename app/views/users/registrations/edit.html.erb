<div class="alert alert-dismissible alert-light">
  <h2>Editar <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="panel panel-default">
      <div class="panel-body">
          <div class="form-inputs">
          <div class="form-group">
            <div class="row">
              <div class="col-sm-4">
                <%= f.label :name, "Perfil", class: "form-label mt-4"%><br>
                <% if resource.avatar.attached? %>
                  <%= image_tag resource.avatar.variant(resize: "100x100!") %> <br>
                  <%= f.label :name, "Trocar?", class: "form-label mt-4"%><br>
                  <%= f.file_field :avatar, class: "form-control" %>
                <% else %>
                  <%= image_tag gravatar_image_url(current_user.email, size:100), height:100, width:100 %><br>
                  <%= f.file_field :avatar, class: "form-control" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", :autofocus => true %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email, class: "form-control", :autofocus => true %>
          </div>
          <div class="form-group">
            <%= f.label :password, 'Senha' %> 
            <%= f.password_field :password, class: "form-control", :autocomplete => "off" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password, 'Confirmar senha' %>
            <%= f.password_field :current_password, class: "form-control" %>
          </div>
      </div>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Confirmar", class: "btn btn-success" %>
    </div>
    <br>
  <% end %>
</div>
<div class="alert alert-dismissible alert-secondary">
  <div class="panel-footer">
    <h3>Deletar minha Conta</h3>
    <p>Tem certeza? <%= button_to "Deletar", registration_path(resource_name), data: { confirm: "Tem certeza que seja deletar sua conta?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
</div>